---
import { Image } from "astro:assets";

const { url, image, name, Category } = Astro.props;
---

<style>
    a {
        position: relative;
    }

    h2 {
        z-index: 4;
        position: absolute;
        bottom: 0;
        left: 1;
        color: black;
        margin-left: 4%;


        color: rgb(0, 0, 0);с
        margin: 0% auto 5% 5%;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 4;
        max-width: 100%;
        overflow: hidden;
    }

    .image-wrapper {
        max-width: 100%;
        height: auto;
        border-radius: 5%;
        overflow: hidden;
    }

    img {
        width: 100%;
        height: auto;
        object-fit: cover;
        border-radius: 10px;
    }
    /* .blur {
        z-index: 1;
