;
        background: linear-gradient(
            0deg,
            rgba(0, 0, 0, 0.6519782913165266) 22%,
            rgba(255, 255, 255, 0) 100%
        );
        background-size: cover;
        border-radius: 10px;
    } */

    .content-wrapper{
        display: flex;
        border: 15px solid white;
        border-radius: 10px;
        width: 90%;
        height: 270px;
        background-color: white;
        
        
    }
</style>
<a href={`/blog/${url}`}>
    <div style="position: relative;">
        <h2>{name}</h2>
        <h2>{Category}</h2>
        <div class="content-wrapper">
            <div class="image-wrapper">
                <div class="blur">

                    <Image
                    src={image.data.attributes.url}
                    alt={image.data.attributes.alternativeText || "Ресторанти"}
                    width="200"
                    height="200"
                    />
                </div>
            </div>
        </div>
    </a>
</div>
