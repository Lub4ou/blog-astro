---
import SingleArticle from "../components/SingleArticle.astro";
import { articlesList } from "../quearies/articles.js";
let counter = 0;
---

<style>
    .latest {
        width: 400;
        height: 600px;
        border: solid 20px #1f0d07;
        border-radius: 20px;
        background-color: #1f0d07;
        overflow-y: scroll;
        margin-right: 8%;
        margin-top: 5.8%;
    }

    /* .latest-internal{
     
    margin-top: 30px;
    width: 100vw;
    display: flex;

    } */


</style>


<div class="latest">
    <div>
        <div class="latest-internal">
            {
                articlesList.posts.data.map((item) => {
                    if (counter < 6) {
                        counter++;
                        return (
                            <SingleArticle
                                url={item.attributes.slug}
                                image={item.attributes.image}
                                name={item.attributes.name}
                            />
                        );
                    }
                })
            }
        </div>
    </div>
</div>
