---
import SingleArticle from "../components/SingleArticle.astro";
import { articlesList } from "../quearies/articles.js";
let counter = 0;
---

<style>
    .latest {
        flex-shrink: 0;
        width: 419px;
        height: 645px;
        border: solid 20px black;
        border-radius: 20px;
        background-color: black;
        overflow-y: scroll;
        margin-top: 5.8%;
    }

    .ad {
        width: 300px;
        height: 250px;
        text-align: center;
        border: 2px solid black;
        margin-top: 5px;
    }
    .all {
        display: flex;
        flex-direction: column;
    }

    /* .latest img {
        width: 371px;
        height: 
100.23px;
    } */
</style>

<div class="all">
    <div class="latest">
        <div class="latest-internal">
            {
                articlesList.posts.data.map((item) => {
                    if (counter < 6) {
                        counter++;
                        return (
                            <SingleArticle
                                url={item.attributes.slug}
                                image={item.attributes.image}
                                name={item.attributes.name}
                            />
                        );
                    }
                })
            }
        </div>
    </div>
    <div class="ad"><p>Реклама</p></div>
</div>
