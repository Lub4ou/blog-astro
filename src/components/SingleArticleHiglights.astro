---
import { Image } from "astro:assets";

const { url, image, name, category } = Astro.props;
---

<style>
    a {
        position: relative;
    }

    h2 {
        z-index: 4;
        position: absolute;
        bottom: 0;
        left: 1;
        color: white;
        margin-left: 4%;

        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
        max-width: 100%;
        overflow: hidden;
  
    
    }
 

    .image-wrapper {
        max-width: 100%;
        height: 250px;
        border-radius: 7%;
        overflow: hidden;
    }

    img{
        width: 100%;
        height: auto;
        object-fit: cover;
    }
    .blur {
        z-index: 1;
        position: absolute;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            0deg,
            rgba(0, 0, 0, 0.6519782913165266) 22%,
            rgba(255, 255, 255, 0) 100%
        );
        background-size: cover;
        border-radius: 20px;
    }
</style>

<a href={`/blog/${url}`}>
    <div style="position: relative;">
        <h2>{name}</h2>
        <!-- <h2>
            {
                category.map((item) => {
                    console.log(item)
                    return <p>{item.attributes.name}</p>;
                    return 1
                })
            }
        </h2> -->
        <div class="blur"></div>
        <div class="image-wrapper">
            <Image
                src={image.data.attributes.url}
                alt={image.data.attributes.alternativeText || "Ресторанти"}
                width="200"
                height="200"
            />
        </div>
    </div>
</a>
