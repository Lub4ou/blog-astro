---
import { Image } from "astro:assets";

import { categoryList } from "../quearies/category.js";
---



<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .category-bar {
        background-color: #8bc750;
        display: flex;
        justify-content: space-evenly;
        align-items:center;
        height: 50px;
        color: #fff;
    }

    .category-button {
        text-decoration: none;
        color: #eeeeee;
        padding: 10px;
        transition: ;
    }

    .category-button:hover {
        background-color: #555;
        border-radius: 9%;
    }
</style>

<div class="category-bar">
    <div class="nav">
        {
            categoryList.categories.data.map(({attributes}) => {
              return(
    <a class="category-button" href={`/categories/${attributes.slug}`}>{attributes.name}</a>
    )
            })
        }
      </div>
      
</div>
