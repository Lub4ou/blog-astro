---
import { Image } from "astro:assets";
import bgrest from "../images/bgrest.svg";
import isnstagramLogo from "../images/instagramLogo.svg";
import facebooklogo from "../images/facebooklogo.svg";
import { categoryList } from "../quearies/category.js";
---

<footer>
  
  <div class="links-wrapper">
    <div class="logo">
      <Image src={bgrest} alt="logo" width="80" height="80" ; />
    </div>


    <div class="footer-categories">
      <div class="categories">
          {
              categoryList.categories.data.map(({attributes}) => {
                return(
      <a class="category-button" href={`/categories/${attributes.slug}`}>{attributes.name}</a>
      )
              })
          }
        </div>
        
  </div>

    <div class="contacts">
      <ul>
        <h3>КОНТАКТИ:</h3>
        <li>0878887559</li>
        <li>Политика за поверителност</li>
        <Image src={isnstagramLogo} alt="insta" width="50" height="52"; />
        <Image src={facebooklogo} alt="face" width="40" height="51"; />
      </ul>

     
    </div>
    
  </div>

  <div class="rights">
    <h2>© 2024 BgResturants. Всички права запазени. Created by L4</h2>
  </div>

</footer>

<style>
  footer {
    display: flex;
    background-color: #F5EEE2;
    color: #000000;
    width: 100%;
    flex-direction: column;
  }

  .links-wrapper{
  display: flex;
  justify-content: space-around
  }


  .rights {
    /* display: flex;
    text-align:center
