---
import SingleArticle from "../../components/SingleArticle.astro";
import { articlesList } from "../../quearies/articles.js";

import Header from "../../components/Header.astro";
import CategoryBar from "../../components/CategoryBar.astro";
import Footer from "../../components/Footer.astro";
import BlackBar from "../../components/BlackBar.astro";
import SEOcontent from "../../components/SEOcontent.astro";
import OpinionSlider from "../../components/OpinionSlider.astro";
import DefaultLayout from "../../layouts/DefaultLayout.astro";
import InfinityHorizontalSlider from "../../components/InfinityHorizontalSlider.astro";
---

<DefaultLayout>
    <CategoryBar />
<InfinityHorizontalSlider></InfinityHorizontalSlider>
    <div style="display: flex;" ,>
        {
            articlesList.posts.data.map((item) => (
                <SingleArticle
                    url={item.attributes.slug}
                    image={item.attributes.image}
                    name={item.attributes.name}
                />
            ))
        }
    </div>
    <OpinionSlider />
    <BlackBar />
   
    <SEOcontent />
</DefaultLayout>

